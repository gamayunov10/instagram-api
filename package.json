  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/instagram-gateway/main",
    "start:instagram-gateway": "node dist/apps/instagram-gateway/main",
    "start:dev:instagram-gateway": "nest start instagram-gateway --watch",
    "build:instagram-gateway": "nest build instagram-gateway",
    "prisma:m": "npx prisma migrate dev",
    "prisma:g": "npx prisma generate",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/instagram-gateway/test/jest-e2e.json --runInBand"
  },
