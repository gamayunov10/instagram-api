    "typescript": "^5.4.3"
  },
  "prisma": {
    "schema": "./prisma/schema.prisma"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*(-|.)spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/"
    ],
    "moduleDirectories": [
      "<rootDir>/../",
      "node_modules"
    ],
    "moduleNameMapper": {
      "^@instagram-api/(.*)$": "<rootDir>/apps/instagram-gateway/$1",
      "^@file/(.*)$": "<rootDir>/apps/files/$1",
      "^@prisma/client$": "<rootDir>/node_modules/@prisma/client"
    },
    "testTimeout": 20000
  }, 
  "engines": {
    "node": ">=20.5.1",
    "npm": ">=9.8.0"
  }
